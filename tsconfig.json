{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "inlineSources": true,
    "declaration": false,
    "diagnostics": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictFunctionTypes": false,
    "target": "es2015",
    "jsx": "react",
    "module":"commonjs",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "ES2016",
      "es5",
      "dom"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "src/renderer/*",
    "tests/comp/*"
  ],
  "exclude": [
    "node_modules",
    "**/*spec.ts",
    "**/*spec.tsx"
  ]
}


